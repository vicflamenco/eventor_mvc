@model IEnumerable<Eventor.Models.App.Evento>

@{
    ViewBag.Title = "Mis Eventos";
}
<br />
<div class="well well-lg">
    <div class="row">
        <div class="col-md-6">
            <h3><strong>Mis Eventos</strong></h3>
        </div>
        <div class="col-md-6">
            @Html.ActionLink("Crear nuevo", "Create", null, new { @class = "btn btn-lg btn-primary pull-right" })
        </div>
    </div>
</div>


<table class="table table-bordered table-hover">
    <tr class="info">
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Inicio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Final)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Lugar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Organizador)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Acceso)
        </th>
    </tr>

    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <tr class=@(item.Final.CompareTo(DateTime.Now) < 0 ? "warning" : "success")>
                <td>

                    <a href="@Url.Action("Details","Eventos", new { id = item.EventoId })" class="text-@(item.Final.CompareTo(DateTime.Now) < 0 ? "warning" : "success")">
                        <strong>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </strong>
                    </a>


                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Inicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Final)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Lugar)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Organizador)
                </td>
                <td class="text-center">
                    @if (item.Acceso.ToString() == "Privado")
                    {
                        <span class="glyphicon glyphicon-lock"></span>
                    }
                    else
                    {
                        <span class="glyphicon glyphicon-globe"></span>
                    }
                </td>

            </tr>
        }
    }
    else
    {
        <tr class="warning">
            <td colspan="6" class="text-center">
                Aún no existen eventos
            </td>
        </tr>
    }

</table>
