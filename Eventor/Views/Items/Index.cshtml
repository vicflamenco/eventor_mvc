@model IEnumerable<Eventor.Models.App.Item>

@{
    ViewBag.Title = "Index";
}

<br />
<div class="well">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <h3><strong>Carrito de Compras</strong></h3>
        </div>
        <div class="col-md-6 col-sm-12">
            <div class="btn-group btn-group-lg pull-right">
                @if (Model.Count() > 0)
                {
                    @Html.ActionLink("Comprar", "FinalizarCompra", "Pedidos", null, new { @class = "btn btn-primary" })
                }
                @Html.ActionLink("Limpiar todo", "ClearSession", null, new { @class = "btn btn-default" })
            </div>

        </div>
    </div>
</div>
<br />

<table class="table table-bordered table-hover">
    <tr>
        <th>
            Entrada
        </th>
        <th>
            Evento
        </th>
        <th>
            Cantidad
        </th>
        <th>
            Quitar
        </th>
    </tr>

    @if (Model.Count() > 0)
    {
        foreach (var item in Model)
        {
            <tr class="success">
                <td>
                    @Html.DisplayFor(modelItem => item.Entrada.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Entrada.Evento.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cantidad)
                </td>
                <td>
                    @Html.ActionLink("Quitar", "DeleteFromCart", new { id = item.EntradaId })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td class="warning text-center" colspan="4">No hay elementos en el carrito</td>
        </tr>
    }

</table>

