@model Eventor.Models.App.Entrada

@{
    ViewBag.Title = "Eliminar";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <br />
    <div class="well">
        <div class="row">
            <div class="col-md-6">
                <h3><strong>@ViewBag.NombreEvento - Eliminar entrada</strong></h3>
            </div>
            <div class="col-md-6">
                <div class="btn-group btn-group-lg pull-right">
                    <input type="submit" value="Eliminar" class="btn btn-lg btn-danger" />
                    @Html.ActionLink("Volver", "Index", new { @id = Model.EventoId }, new { @class = "btn btn-default" })
                </div>

            </div>
        </div>
    </div>
}

<div class="col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>¿Desea eliminar la siguiente entrada?<span class="glyphicon glyphicon-user pull-right"></span></h4>
        </div>
        <div class="panel-body">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Nombre)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Nombre)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.Precio)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Precio)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.Cupo)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Cupo)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.CantidadMinima)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CantidadMinima)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.CantidadMaxima)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.CantidadMaxima)
                </dd>
                <hr />
                <dt>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Descripcion)
                </dd>

            </dl>

        </div>
    </div>
</div>
