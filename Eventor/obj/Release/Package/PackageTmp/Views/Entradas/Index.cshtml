@model IEnumerable<Eventor.Models.App.Entrada>

@{
    ViewBag.Title = "Administrar Entradas";
}
   <br /> 
<div class="well">
    <div class="row">
        <div class="col-md-8">
            <h3><strong>@ViewBag.NombreEvento - Administrar @ViewBag.ConteoEntradas entrada(s)</strong></h3>
        </div>
        <div class="col-md-4">
            <div class="btn-group btn-group-lg pull-right">
                
                @if(!(bool)ViewBag.Finalizado)
                {
                    @Html.ActionLink("Crear", "Create", new { @id = ViewContext.RouteData.Values["id"] }, new { @class = "btn btn-primary" })
                }
                @Html.ActionLink("Volver", "Details","Eventos", new { @id = ViewContext.RouteData.Values["id"] }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
</div>

    <table class="table table-bordered table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cupo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadMinima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadMaxima)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            @if (!(bool)ViewBag.Finalizado)
            {
                <th>
                    Acción
                </th>
            }
        </tr>

        @if (Model.Any())
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cupo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadMinima)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CantidadMaxima)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    @if (!(bool)ViewBag.Finalizado)
                    {
                        <td class="text-center">
                            <div class="btn-group" role="group" aria-label="...">
                                <a href="@Url.Action("Edit","Entradas", new { id = item.EntradaId })" class="btn btn-default">
                                    <i class="glyphicon glyphicon-pencil"></i>
                                    <span class="sr-only">Editar</span>
                                </a>

                                <a href="@Url.Action("Details","Entradas", new { id = item.EntradaId })" class="btn btn-default">
                                    <i class="glyphicon glyphicon-list-alt"></i>
                                    <span class="sr-only">Ver</span>
                                </a>

                                <a href="@Url.Action("Delete","Entradas", new { id = item.EntradaId })" class="btn btn-default">
                                    <i class="glyphicon glyphicon-trash"></i>
                                    <span class="sr-only">Eliminar</span>
                                </a>
                            </div>
                        </td>
                    }
                </tr>
            }
        }
        else
        {
            <tr>
                <td class="warning text-center" colspan="7">
                    Aún no se han creado entradas para este evento
                </td>
            </tr>
        }

    </table>
